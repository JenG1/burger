
<div class="container-fluid">
  <h1 class="text-center">Eat-Da-Burger!</h1>
  <div class="row align-items-center">
    <div class="col-sm-6 bg-blue rounded">
      <h2 class="text">Waiting to be devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6 bg-blue rounded">
      <h2 class="text">Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col-sm-12 bg-blue rounded">
      <h2 class="text">Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="devour">Devour It!</label><br>
          <input type="radio" name="devoured" value="1" checked> Devour It!<br>
          <input type="radio" name="devoured" value="0"> Nope!
        </div>
        {{!-- <button type="submit">Add Burger</button> --}}
        <button type="submit" class="btn btn-outline-primary">Add Burger</button>
      </form>
    </div>
  </div>
</div>