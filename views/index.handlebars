<div class="container-fluid">
  <h1 class="text-center">Eat-Da-Burger!</h1>
  
  <div class="row align-items-center">
    <div class="col-sm-6 bg-blue rounded">Waiting to be devoured!
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6 bg-blue rounded">Devoured!
      <ul>
        {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row align-items-center">
    <div class="col-sm-12 bg-blue rounded">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <input type="radio" name="devoured" value="0" checked><br>
        </div>
        <button type="submit" class="btn btn-outline-success" name="devoured" value=>Add Burger</button>
      </form>
    </div>
  </div>
</div>